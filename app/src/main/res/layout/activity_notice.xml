<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_notice"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/noticegreybg"
              android:orientation="vertical">

    <android.dayou.com.baoma.view.myview.customview.TitleBar
        android:id="@+id/noticetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

    <edu.swu.pulltorefreshswipemenulistview.library.PullToRefreshSwipeMenuListView
        layout_marginTop="-1dp"
        android:id="@+id/noticeListPrs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/noticegreybg"
        android:dividerHeight="0.5dp"
        android:scrollbars="none"/>
</LinearLayout>
