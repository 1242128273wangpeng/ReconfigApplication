<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/rlBg"
                android:background="@drawable/coupon_ysy"
    >

    <ImageView
        android:id="@+id/ivUsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coupon_ysy_zhang"
        android:layout_alignParentRight="true"
        android:layout_margin="3dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ivUsed"
        android:layout_alignEnd="@+id/ivUsed">



        <RelativeLayout
            android:id="@+id/relative_01"
            android:layout_width="0dp"
            android:layout_weight="37"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/yhj1"
                android:text="￥"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/yhj2"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/yhj2"
                android:text="100"
                android:textSize="34dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/yhj1"/>
            <TextView
                android:id="@+id/yhj3"
                android:text="折"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_alignBaseline="@+id/yhj2"
                android:layout_toRightOf="@+id/yhj2"/>

            <TextView
                android:id="@+id/yhj4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满1000使用"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/yhj2"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:paddingLeft="13dp"
            android:layout_weight="67"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/relative_01"
            android:orientation="vertical">

            <TextView
                android:id="@+id/couponName"
                android:text="现金卷：ID号1234"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/consumePrice"
                android:text="线下消费可抵用￥30.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvCouponTime"
                android:text="2017.3.11-2017.5.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="10dp"
                android:textColor="#a7a7a7"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_xuxian"
                android:layout_marginTop="8dp"
                android:layerType="software"/>

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="50dp"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="#3ed7df"
                android:background="@drawable/shape_sy_coupon"
                android:layout_marginTop="8dp"
                android:layout_height="20dp"
                android:text="立即使用"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
