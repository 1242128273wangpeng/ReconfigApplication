<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_head_2"/>
    <android.dayou.com.baoma.view.myview.MyEditText
        android:id="@+id/tell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin3"
        android:layout_marginRight="@dimen/layout_margin3"
        android:layout_marginTop="@dimen/layout_margin2"
        android:hint="@string/settell"
        android:background="@drawable/anniu7"
        android:singleLine="true"
        android:drawableRight="@drawable/clear"
        android:drawablePadding="@dimen/layout_margin"
        android:numeric="integer"
        android:maxLength="11"
        android:padding="@dimen/layout_margin"
        android:textSize="@dimen/size_18"
        android:textColor="@color/black"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/anniu6"
            android:text="@string/testgetcode"
            android:textSize="@dimen/size_18"
            android:layout_alignParentRight="true"
            android:textColor="@color/background_white"
            android:gravity="center"
            android:layout_marginTop="@dimen/layout_margin2"
            android:layout_marginRight="@dimen/layout_margin3"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin"
            android:paddingTop="@dimen/layout_margin"
            android:paddingBottom="@dimen/layout_margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/getcode"
            android:layout_alignBottom="@id/getcode"
            android:layout_marginRight="@dimen/layout_margin"
            android:orientation="vertical">
            <android.dayou.com.baoma.view.myview.MyEditText
                android:id="@+id/verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin3"
                android:layout_marginTop="@dimen/layout_margin"
                android:hint="@string/input_verification"
                android:background="@drawable/anniu7"
                android:drawableRight="@drawable/clear"
                android:singleLine="true"
                android:numeric="integer"
                android:maxLength="11"
                android:padding="@dimen/layout_margin"
                android:textSize="@dimen/size_17"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </RelativeLayout>


    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/layout_margin3"
        android:layout_marginRight="@dimen/layout_margin3"
        android:layout_marginTop="@dimen/layout_margin60"
        android:textSize="@dimen/button"
        android:textColor="@color/background_white"
        android:gravity="center"
        android:text="@string/login"
        android:background="@drawable/anniu1"/>
</LinearLayout>
