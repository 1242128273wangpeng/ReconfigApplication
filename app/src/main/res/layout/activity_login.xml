<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/editarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp36"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp24">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp112">

                    <com.changzhoureconfig.yimeng.com.reconfigapplication.ui.views.MyEditText
                        android:id="@+id/tell"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp112"
                        android:layout_marginLeft="@dimen/dp80"
                        android:layout_marginRight="@dimen/dp80"
                        android:background="@null"
                        android:drawableLeft="@drawable/register_call"
                        android:drawablePadding="@dimen/dp20"
                        android:drawableRight="@drawable/clear"
                        android:hint="@string/settell"
                        android:padding="@dimen/dp20"
                        android:phoneNumber="true"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp32" />

                    <View
                        android:layout_width="290dp"
                        android:layout_height="0.5dp"
                        android:layout_alignBottom="@id/tell"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="@dimen/dp80"
                        android:background="#e5e5e5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp112">

                    <com.changzhoureconfig.yimeng.com.reconfigapplication.ui.views.MyEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp80"
                        android:layout_marginRight="@dimen/dp160"
                        android:layout_marginTop="@dimen/dp30"
                        android:background="@null"
                        android:drawableLeft="@drawable/register_password"
                        android:drawablePadding="@dimen/dp20"
                        android:drawableRight="@drawable/clear"
                        android:hint="@string/reset_password"
                        android:padding="@dimen/dp20"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp32" />

                    <ImageView
                        android:id="@+id/seeit"
                        android:layout_width="@dimen/dp76"
                        android:layout_height="@dimen/dp76"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="6dp"
                        android:layout_marginRight="@dimen/dp80"
                        android:layout_marginTop="@dimen/dp48"
                        android:padding="@dimen/dp14"
                        android:src="@drawable/close"
                        android:visibility="invisible" />

                    <View
                        android:layout_width="290dp"
                        android:layout_height="0.5dp"
                        android:layout_alignBottom="@id/password"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="@dimen/dp80"
                        android:background="#e5e5e5" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/logintv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp100"
                    android:layout_marginRight="@dimen/dp80"
                    android:layout_marginTop="33dp"
                    android:background="@drawable/aninu2"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp32" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editarea"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp100"
                    android:layout_weight="1"
                    android:text="@string/forget_the_password"
                    android:textColor="@color/yunshi"
                    android:textSize="@dimen/dp28" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:id="@+id/registertv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/nowregister"
            android:textColor="@color/maintop"
            android:textSize="@dimen/dp28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/registertv"
            android:text="没有帐号?"
            android:textColor="@color/blacktext"
            android:textSize="@dimen/dp28" />
    </RelativeLayout>

</RelativeLayout>
