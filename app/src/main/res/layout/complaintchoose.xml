<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/complaint_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/complaint_top"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="广告"
        android:textColor="@color/black"
        android:textSize="@dimen/size_17" />

    <Button
        android:id="@+id/complaint_malice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="恶意"
        android:textColor="@color/black"
        android:textSize="@dimen/size_17" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/subscribe_item_pressed_bg" />

    <Button
        android:id="@+id/complaint_illegal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="违法"
        android:textColor="@color/black"
        android:textSize="@dimen/size_17" />

    <Button
        android:id="@+id/complaint_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/complaint_bottom"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="其他"
        android:textColor="@color/black"
        android:textSize="@dimen/size_17" />

    <Button
        android:id="@+id/complaint_call_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/anniu9"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="取 消"
        android:textColor="@color/black"
        android:textSize="@dimen/size_17" />
</LinearLayout>