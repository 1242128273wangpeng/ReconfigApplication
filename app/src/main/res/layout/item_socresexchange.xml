<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/scoresrootbg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white">

        <ImageView
            android:id="@+id/presentimg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:padding="1dp"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/presentinfotv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="9dp"
                android:layout_marginTop="@dimen/dp19"
                android:textColor="@color/black"
                android:textSize="@dimen/dp26"/>

            <TextView
                android:id="@+id/inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/presentinfotv"
                android:layout_below="@id/presentinfotv"
                android:layout_marginTop="@dimen/dp10"
                android:text="库存100件"
                android:textColor="@color/greytext"
                android:textSize="@dimen/dp20"/>

            <RelativeLayout
                android:layout_alignLeft="@id/presentinfotv"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/inventory"
                android:layout_marginBottom="@dimen/dp16"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/scoresicon"/>

                <TextView
                    android:id="@+id/presentscorestv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_toRightOf="@id/icon"
                    android:textColor="@color/zhucolor"
                    android:textSize="@dimen/text_12"/>

                <TextView
                    android:id="@+id/exchangebut"
                    android:layout_width="@dimen/dp120"
                    android:layout_height="@dimen/padding25"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@drawable/pinkbutbg"
                    android:gravity="center"
                    android:padding="@dimen/dp4"
                    android:text="@string/duihaun"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp24"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>