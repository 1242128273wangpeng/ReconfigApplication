<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp91"
        android:background="@color/window_white">


        <TextView
            android:id="@+id/circleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="基本资料设置"
            android:textColor="@color/black"
            android:textSize="@dimen/dp32" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:background="#f8f8f8"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下是系统默认设置，您可以手动修改"
            android:textColor="#666666"
            android:textSize="@dimen/dp28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Nick_Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tell"
            android:layout_marginLeft="@dimen/dp60"
            android:padding="@dimen/dp20"
            android:text="昵称："
            android:textColor="#a7a7a7"
            android:textSize="@dimen/dp34" />

        <com.changzhoureconfig.yimeng.com.reconfigapplication.ui.views.MyEditText
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="@dimen/dp80"
            android:background="@drawable/aninu3"
            android:drawablePadding="@dimen/dp20"
            android:drawableRight="@drawable/clear"
            android:padding="@dimen/dp20"
            android:paddingLeft="25dp"
            android:singleLine="true"
            android:textColor="@color/maintop"
            android:textColorHint="@color/maintop"
            android:textSize="@dimen/dp32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tell"
            android:layout_marginLeft="@dimen/dp60"
            android:padding="@dimen/dp20"
            android:text="末次月经："
            android:textColor="#a7a7a7"
            android:textSize="@dimen/dp34" />

        <RelativeLayout
            android:id="@+id/llCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp80"
            android:background="@drawable/aninu3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lastdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp20"
                android:padding="@dimen/dp20"
                android:singleLine="true"
                android:textColor="@color/maintop"
                android:textColorHint="@color/maintop"
                android:textSize="@dimen/dp32" />

            <TextView
                android:id="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/calandernew" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp80"
        android:layout_marginRight="@dimen/dp80"
        android:layout_marginTop="35dp"
        android:background="@drawable/anniu1"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/dp32" />
</LinearLayout>