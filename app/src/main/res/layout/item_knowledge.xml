<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_weight="8"
    android:padding="@dimen/layout_margin"
    android:layout_height="116dp">

    <android.dayou.com.baoma.view.myview.RoundImageView
        android:id="@+id/imgUrl"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_weight="3"
        android:src="@drawable/typeimg"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:paddingLeft="@dimen/size_15"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自孕前"
            android:textSize="@dimen/size_13"
            android:textColor="@color/text_grey2"
            android:paddingBottom="@dimen/size_15"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/size_15"
            android:textColor="@color/title_color"
            android:paddingBottom="@dimen/layout_margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/anniu11"
                android:text="100K"
                android:textSize="@dimen/layout_margin"
                android:textColor="@color/background_white"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读全文"
                android:textSize="@dimen/size_15"
                android:drawablePadding="@dimen/padding5"
                android:drawableRight="@drawable/eyes"
                android:paddingBottom="@dimen/layout_margin2"
                android:paddingLeft="@dimen/layout_margin"
                android:textColor="@color/text_grey"/>
            
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background_gray4"/>
    </LinearLayout>
</LinearLayout>