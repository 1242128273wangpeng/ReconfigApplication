<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nulladdress_dialog"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="@dimen/butheight"
            android:paddingTop="@dimen/butheight"
            android:text="@string/pleasefill"
            android:textColor="@color/pinkbg"
            android:textSize="@dimen/size_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/corners"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/canceltv"
                android:layout_width="@dimen/height90"
                android:layout_height="@dimen/height1"
                android:background="@drawable/cancel_dialog"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/background_white"
                android:textSize="@dimen/size_min" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/background_white" />

            <TextView
                android:id="@+id/filltv"
                android:layout_width="@dimen/height90"
                android:layout_height="@dimen/height1"
                android:background="@drawable/fillit_dialog"
                android:gravity="center"
                android:text="立即填写"
                android:textColor="@color/background_white"
                android:textSize="@dimen/size_min" />
        </LinearLayout>
</LinearLayout>