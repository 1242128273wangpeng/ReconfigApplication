<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin2"
            android:background="@color/background_gray2">

            <ImageView
                android:id="@+id/deliverimg"
                android:layout_width="@dimen/memberheadwh"
                android:layout_height="@dimen/memberheadwh"
                android:layout_marginBottom="@dimen/margin_top"
                android:layout_marginLeft="@dimen/layout_margin4"
                android:layout_marginTop="@dimen/margin_top"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/deliverinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin5"
                android:layout_marginTop="@dimen/layout_margin5"
                android:layout_toRightOf="@id/deliverimg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info"
                android:layout_marginTop="@dimen/height1"
                android:layout_toRightOf="@id/deliverimg">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_margin5"
                    android:src="@drawable/scoresicon" />

                <TextView
                    android:id="@+id/deliverscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin7"
                    android:layout_toRightOf="@id/icon"
                    android:textColor="@color/pinkbg" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/corners"
        android:paddingLeft="@dimen/layout_margin5"
        android:paddingTop="@dimen/corners">

        <TextView
            android:id="@+id/orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greytext"
            android:textSize="@dimen/size_11" />

        <TextView
            android:id="@+id/createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greytext"
            android:textSize="@dimen/size_11" />

        <TextView
            android:id="@+id/logisticalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greytext"
            android:textSize="@dimen/size_11" />
    </LinearLayout>

    <include layout="@layout/splitline" />

    <RelativeLayout
        android:id="@+id/confirmdeliveritem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white">

        <TextView
            android:id="@+id/sumtv"
            android:textColor="@color/greytext"
            android:textSize="@dimen/dp24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp34" />

        <TextView
            android:id="@+id/confirmdeliverbut"
            android:layout_width="@dimen/butwidth"
            android:layout_height="@dimen/butheight"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/membermargin2"
            android:layout_marginRight="@dimen/layout_margin4"
            android:layout_marginTop="@dimen/membermargin2"
            android:background="@drawable/pinkbutbg"
            android:gravity="center"
            android:text="@string/confirmreceiver"
            android:textColor="@color/background_white"
            android:textSize="@dimen/size_11" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin7"
        android:background="@color/background_gray2" />
</LinearLayout>