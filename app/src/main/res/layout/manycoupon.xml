<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/maindialog_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/maincoupon_radius"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp38"
            android:layout_marginTop="@dimen/dp40"
            android:gravity="center"
            android:text="优惠券已到账"
            android:textColor="@color/white"
            android:textSize="21dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/manycouponbg">

            <TextView
                android:id="@+id/detailcoupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp44"
                android:layout_marginRight="@dimen/dp44"
                android:layout_marginTop="@dimen/dp48"
                android:text="3张优惠券已经悄悄放入您的放入您的账户，请至“我的优惠券”中查看详情"
                android:textSize="@dimen/dp30"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailcoupon"
                android:layout_marginLeft="@dimen/dp44"
                android:layout_marginRight="@dimen/dp44"
                android:layout_marginTop="@dimen/dp64"
                android:text="请在红房子医院线下使用"
                android:textColor="@color/yunshi"
                android:textSize="12dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp38"
            android:layout_marginTop="@dimen/dp40"
            android:gravity="center"
            android:text="优惠券请到我的优惠券中查看"
            android:textColor="@color/black2"
            android:textSize="12dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/closecouponIV"
        android:layout_below="@id/maindialog_top"
        android:layout_marginTop="@dimen/dp60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/closecoupon"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>