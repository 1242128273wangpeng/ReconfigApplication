<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">

    <include layout="@layout/layout_head_2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:gravity="center|top"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_dangan1"
                android:gravity="center"
                android:text="未使用"
                android:textColor="@color/zhu_text"
                android:textSize="@dimen/size_15"/>

            <TextView
                android:id="@+id/fukedangang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_dangan2"
                android:gravity="center"
                android:text="已使用"
                android:textColor="@color/zhu_text"
                android:textSize="@dimen/size_15"/>

            <TextView
                android:id="@+id/chankedangan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_dangan3"
                android:gravity="center"
                android:text="已过期"
                android:textColor="@color/zhu_text"
                android:textSize="@dimen/size_15"/>
        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

