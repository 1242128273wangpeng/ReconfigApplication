<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_my_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_marginTop="@dimen/dp20"
            android:layout_weight="1"
            android:text="我的圈子"
            android:textColor="@color/yunshi"
            android:textSize="@dimen/dp24"/>

        <ImageView
            android:id="@+id/addQuanzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp24"
            android:src="@drawable/zengjiaquanzi"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/quanziViewBack1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/rvQuanzi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp218"
            />

        <LinearLayout
            android:id="@+id/pointLayout1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp14"
            android:layout_alignBottom="@id/rvQuanzi"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal"/>
    </RelativeLayout>

</LinearLayout>