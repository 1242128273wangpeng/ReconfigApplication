<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yummainbg"
    >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/return_out"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp80"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/whitereturn_out"
            android:paddingBottom="@dimen/layout_margin2"
            android:paddingLeft="@dimen/layout_margin2"
            android:paddingRight="@dimen/layout_margin3"
            android:paddingTop="@dimen/layout_margin2"/>

        <LinearLayout
            android:id="@+id/birth_day"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp80"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/anniu"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp40"
                android:background="@drawable/yun_left"
                android:padding="@dimen/dp10"/>

            <TextView
                android:id="@+id/pregnancyday"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp54"
                android:layout_marginRight="@dimen/dp54"
                android:gravity="center"
                android:textColor="@color/maintop"
                android:textSize="@dimen/size_20"/>

            <ImageView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp40"
                android:background="@drawable/yun_right"
                android:padding="@dimen/dp10"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:includeFontPadding="false"
            android:textColor="@color/background_white"
            android:textSize="@dimen/size_24"
            />

        <TextView
            android:id="@+id/monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="-5dp"
            android:includeFontPadding="false"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/size_13"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tu"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp60"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/yuan_tu2"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp22"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22"
                android:layout_marginTop="@dimen/dp22"
                android:background="@drawable/yuan_tu"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/yuan_tu0"
                    android:layout_marginTop="@dimen/dp24"
                    android:layout_marginBottom="@dimen/dp24"
                    android:layout_marginLeft="@dimen/dp24"
                    android:layout_marginRight="@dimen/dp24"
                    android:gravity="center"
                    >
                <android.dayou.com.baoma.view.myview.MyImageView
                    android:id="@+id/img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.dayou.com.baoma.view.myview.DynamicWave
        android:id="@+id/bolang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dibu"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tu"
        android:layout_marginTop="@dimen/dp76"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/yuday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="1"
                            android:textColor="@color/colorwhite"
                            android:textSize="@dimen/dp36"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/yuday"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/day"
                            android:textColor="@color/colorwhite"
                            android:textSize="@dimen/dp36"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance_expectedconfinement"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/dp22"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lenght"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/colorwhite"
                            android:textSize="@dimen/dp36"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="cm"
                            android:textColor="@color/colorwhite"
                            android:textSize="@dimen/dp36"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/baby_height"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/dp22"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bbg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/colorwhite"
                            android:textSize="@dimen/dp36"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="g"
                            android:textColor="@color/colorwhite"
                            android:textSize="@dimen/dp36"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/baby_weight"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/dp22"/>

                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp76"
                android:layout_marginTop="@dimen/dp36"
                android:paddingLeft="@dimen/dp24"
                android:paddingRight="@dimen/dp24">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/dp30"/>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dibu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp64"
        android:paddingTop="@dimen/dp64"
        >

        <TextView
            android:id="@+id/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp24"
            android:drawableTop="@drawable/weight"
            android:textColor="@color/maintop"
            android:gravity="center"
            android:text="称重"/>
    </LinearLayout>
</RelativeLayout>
