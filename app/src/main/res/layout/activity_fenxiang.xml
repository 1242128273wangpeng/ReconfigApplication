<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="5dip" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/anniu9"
        android:padding="@dimen/layout_margin"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/hy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:drawableTop="@drawable/wshare"
            android:text="微信好友"/>

        <TextView
            android:id="@+id/py"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:gravity="center"
            android:drawableTop="@drawable/fshare"
            android:text="朋友圈"/>

        <TextView
            android:id="@+id/sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:gravity="center"
            android:drawableTop="@drawable/shouchang"
            android:text="收藏"/>
        <TextView
            android:id="@+id/jb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:gravity="center"
            android:drawableTop="@drawable/complaint"
            android:text="举报"
            android:visibility="gone"/>

    </LinearLayout>

    <Button
        android:id="@+id/call_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/anniu9"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="取 消"
        android:textColor="@color/colorgreen"
        android:textSize="@dimen/size_17"
        />
</LinearLayout>