<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="@dimen/dp24"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#00000000">
    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginRight="@dimen/dp24"
        android:background="@drawable/anniu15">

        <TextView
            android:id="@+id/notice_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/dp12"
            android:layout_marginLeft="@dimen/dp36"
            android:layout_marginTop="@dimen/dp24"
            android:background="@color/white"
            android:text="消息提醒"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/notice_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp12"
            android:layout_marginRight="@dimen/dp36"
            android:layout_marginTop="@dimen/dp24"
            android:background="@color/white"
            android:text="2017-08-12 22:08:22"
            android:textColor="@color/zhu_text"/>

        <View
            android:id="@+id/notice_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/notice_type_tv"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_marginRight="@dimen/dp24"
            android:background="@color/noticegreybg"
            />

        <TextView
            android:id="@+id/notice_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notice_line"
            android:layout_marginBottom="@dimen/dp24"
            android:layout_marginLeft="@dimen/dp36"
            android:layout_marginRight="@dimen/dp36"
            android:layout_marginTop="@dimen/dp12"
            android:background="@color/white"
            android:minHeight="@dimen/dp100"
            android:textColor="@color/zhu_text"/>
    </RelativeLayout>

    <TextView
        android:layout_width="@dimen/dp24"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#00000000">
    </TextView>
</RelativeLayout>