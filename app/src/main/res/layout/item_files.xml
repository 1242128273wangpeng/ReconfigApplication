<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:paddingBottom="10dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        android:background="#f8f8f8"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/deptId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产科检查"
            android:textSize="16dp"
            android:padding="@dimen/layout_margin"
            style="@style/ZhuTextblack"/>

        <TextView
            android:id="@+id/createTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:gravity="right"
            android:drawableRight="@drawable/more"
            android:drawablePadding="@dimen/padding5"/>

        <TextView
            android:id="@+id/fourDimen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/maintop"
            android:textSize="@dimen/size_13"
            android:text="(四维检查)"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dangan"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="-12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="产检次数："
                android:textColor="#3ed7df"/>
            <TextView
                android:id="@+id/parity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="20dp"
                android:textColor="#3ed7df"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="#3ed7df"
                    android:textSize="15dp"
                    android:text="孕"/>
                <TextView
                    android:id="@+id/yunzhou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="6"
                    android:textColor="#3ed7df"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#3ed7df"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="周"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/docName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="医生：xxx"
                android:textSize="15dp"
                android:textColor="#a7a7a7"/>

            <TextView
                android:id="@+id/evaluate"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/filespingjiaanniu"
                android:text="评价"
                android:textColor="#3ed7df"
                android:textSize="13dp"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>