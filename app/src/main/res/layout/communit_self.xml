<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/information">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp120"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_marginTop="@dimen/dp20"
            android:scaleType="centerCrop"
            android:src="@drawable/touxiang" />
        <ImageView
            android:id="@+id/ivReddian"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hongdiantishi"/>
        <LinearLayout
           android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp26"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvuUser"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="我是你二大妈"
                android:textSize="@dimen/dp32"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/quanzitextColor"/>
            <TextView
                android:id="@+id/tvUserYunTime"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孕五周八天"
                android:textSize="@dimen/dp24"
                android:textColor="@color/yunshi"/>
        </LinearLayout>
        <ImageView
            android:layout_marginRight="@dimen/dp24"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/community_arrow"/>
    </LinearLayout>
</FrameLayout>