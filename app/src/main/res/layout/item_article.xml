<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llitem"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp160"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingBottom="9dp"
              android:paddingLeft="@dimen/dp24"
              android:paddingTop="@dimen/dp24"
    >

    <ImageView
        android:id="@+id/imgUrl"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="@dimen/dp24"
        android:scaleType="fitXY"
        android:src="@drawable/baby"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp24"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp30">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/blacktext2"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_marginBottom="@dimen/dp30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/watchnum"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:text="100"
                android:textColor="@color/greytext"
                android:textSize="@dimen/dp22"/>

            <TextView
                android:id="@+id/follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp180"
                android:drawableLeft="@drawable/collect"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:text="888"
                android:textColor="@color/greytext"
                android:textSize="@dimen/dp22"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>